<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.varejodigital.activities.ProductDetailActivity">

    <include layout="@layout/includes_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageProduct"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/img_product_placeholder"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/margin_min"/>

            <TextView
                android:id="@+id/txtName"
                tools:text="Refrigerante 2L"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="@dimen/margin_min"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

            <TextView
                android:text="Preço de Custo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />

            <TextView
                android:text="R$ 3,39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_min"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

            <TextView
                android:text="Preço de Venda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />

            <TextView
                android:text="R$ 4,99"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_min"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

            <TextView
                android:text="Margem Bruta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />

            <TextView
                android:text="47%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_min"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:text="Qtd. Depósito"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />

                    <TextView
                        android:text="120"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin_min"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:text="Qtd. Loja"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />

                    <TextView
                        android:text="34"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin_min"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:text="Estoque"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />

                    <TextView
                        android:text="154"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin_min"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:text="Venda Dia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />

                    <TextView
                        android:text="43"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin_min"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:text="Venda Semana"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />

                    <TextView
                        android:text="109"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin_min"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:text="Venda Mês"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />

                    <TextView
                        android:text="442"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin_min"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />
                </LinearLayout>



            </LinearLayout>


        </LinearLayout>


    </ScrollView>



</RelativeLayout>
