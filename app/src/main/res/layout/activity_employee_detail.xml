<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.varejodigital.activities.EmployeeDetailActivity">

    <include layout="@layout/includes_toolbar"/>


    <ImageView
        android:id="@+id/imageEmployee"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/img_employee_placeholder"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/margin"
        android:layout_below="@+id/toolbar"/>

    <TextView
        android:id="@+id/txtName"
        tools:text="João das Flores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/margin"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_below="@+id/imageEmployee"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtName"
        android:layout_margin="@dimen/margin"
        android:orientation="vertical">

        <TextView
            android:text="Data de Admissao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />

        <TextView
            android:text="17/12/2014"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

        <TextView
            android:text="Cargo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />

        <TextView
            android:text="Caixa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

        <TextView
            android:text="Salário"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />

        <TextView
            android:text="R$ 1.200,00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

    </LinearLayout>

</RelativeLayout>
